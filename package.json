{
	"name": "cypher43-client",
	"displayName": "Cypher Http Client",
	"description": "",
	"version": "0.0.2",
	"repository": {
        "type": "git",
        "url": "https://github.com/zuize47/cypher43-client"
    },
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cypher43-client.runCypher"
	],
	"icon": "assets/logo.png",
    "galleryBanner": {
        "color": "#292b31",
        "theme": "dark"
    },
	"main": "./extension.js",
	"contributes": {
		"languages": [
			{
                "id": "cypher",
                "aliases": [
                	"Cypher Query Language",
                    "Cypher QL",                    
                    "cypher"
                ],
                "extensions": [
                    ".cql",
                    ".cyp",
                    ".cypher"
                ],
                "configuration": "./cypher.configuration.json"
            }
		],
		"grammars": [
            {
                "language": "cypher",
                "scopeName": "source.cypher",
                "path": "./syntaxes/cypher-language.json"
            },
            {
                "injectTo": [
                    "source.js",
                    "source.ts",
                    "source.jsx",
                    "source.js.jsx",
                    "source.tsx",
                    "source.python"
                ],
                "scopeName": "cypher",
                "path": "./syntaxes/cypher-embedded.json"
            }
        ],
		"commands": [
			{
				"command": "cypher43-client.runCypher",
				"title": "Run Cypher"
			}
		],
		"menus": {
			"editor/context": [
                {
                    "command": "cypher43-client.runCypher",
                    "group": "Cypher",
                    "when": "editorLangId == cypher"
                }
            ]
		},
		"keybindings": [
			{
			  "command": "cypher43-client.runCypher",
			  "key": "f5",
			  "mac": "cmd+f5",
			  "when": "editorLangId == cypher"
			}
		  ]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	},
	"dependencies": {
		"axios": "^0.24.0"
	}
}
